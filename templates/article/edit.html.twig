{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <h1>Edit the Article</h1>

    <hr>

    <div style="display:flex;">
        <div>
            <h3>Details</h3>
            {{ include('article/_form.html.twig', {articleForm}) }}
        </div>
        <div>
            <h3>References</h3>

            <form
                    action="{{ path('admin_article_add_reference', {id: article.id}) }}"
                    method="post"
                    enctype="multipart/form-data"
            >
                <div>
                    <ul>
                        {% for reference in article.articleReferences %}
                            <li>
                                {{ reference.originalFilename }}
                                <span>
                                    <a href="{{ path('admin_article_download_reference', {id: reference.id}) }}">Download</a>
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                    <input type="file" name="reference" id="">
                </div>
                <button type="submit">Upload</button>
            </form>
        </div>
    </div>
{% endblock %}
