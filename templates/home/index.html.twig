{% extends 'base.html.twig' %}

{% block title %}u r home{% endblock %}

{% block body %}
    <h1>Articles</h1>
    {% for article in articles %}
        <h2>{{ article.title }}</h2>
        {% if article.imagePath %}
            <img src="{{ uploaded_asset(article.imagePath) }}" alt="Article Image" height="100px">
        {% endif %}
    {% endfor %}
{% endblock %}
